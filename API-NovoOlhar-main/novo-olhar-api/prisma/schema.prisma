datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categoria {
  id_categoria Int    @id @default(autoincrement())
  nome         String
  descricao    String?
  locais       Local[]
}

model Gestor {
  id_gestor Int    @id @default(autoincrement())
  nome      String
  email     String  @unique
  telefone  String?
  data_nascimento DateTime?
  cpf       String  @unique
  senha     String
  locais    Local[]
  carrossel Carrossel[]
}

model Local {
  id_local    Int       @id @default(autoincrement())
  nome        String
  descricao   String?
  breve       String?
  telefone    String?
  email       String?
  imagem      String?
  latitude    Float?
  longitude   Float?
  numero      String?
  complemento String?
  id_categoria Int
  id_gestor   Int
  cidade      String
  estado      String
  bairro      String?
  rua         String?
  cep         String?
  categoria   Categoria @relation(fields: [id_categoria], references: [id_categoria])
  gestor      Gestor    @relation(fields: [id_gestor], references: [id_gestor])
}

model Carrossel {
  id_carrossel     Int      @id @default(autoincrement())
  titulo           String
  descricao        String?
  imagem           String?
  ordem            Int      @default(0)
  ativo            Boolean  @default(true)
  data_criacao     DateTime @default(now())
  data_atualizacao DateTime @updatedAt
  id_gestor        Int
  gestor           Gestor   @relation(fields: [id_gestor], references: [id_gestor])
}
